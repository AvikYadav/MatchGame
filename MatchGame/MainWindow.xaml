        HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="60" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Text="?" Grid.Row="2" FontSize="36"
        HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="60" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Text="?" Grid.Row="3" FontSize="36"
        HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="60" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Text="?" Grid.Column="1" FontSize="36"
        HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="60" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Text="?" Grid.Column="1" Grid.Row="2" FontSize="36"
        HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="60" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Text="?" Grid.Column="1" Grid.Row="3" FontSize="36"
